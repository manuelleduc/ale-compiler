package ale.xtext.validation;

import ale.xtext.AleTypeValidator;
import ale.xtext.ale.Root;
import com.google.inject.Inject;
import it.xsemantics.runtime.validation.XsemanticsValidatorErrorGenerator;
import org.eclipse.xtext.validation.AbstractDeclarativeValidator;
import org.eclipse.xtext.validation.Check;

@SuppressWarnings("all")
public class AleTypeValidatorValidator extends AbstractDeclarativeValidator {
  @Inject
  protected XsemanticsValidatorErrorGenerator errorGenerator;
  
  @Inject
  protected AleTypeValidator xsemanticsSystem;
  
  protected AleTypeValidator getXsemanticsSystem() {
    return this.xsemanticsSystem;
  }
  
  @Check
  public void checkClassNames(final Root root) {
    errorGenerator.generateErrors(this,
    	getXsemanticsSystem().checkClassNames(root),
    		root);
  }
}
